<Window x:Class="ChronoLabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ChronoLabel" Height="401" Width="292"
        
        WindowStartupLocation="CenterScreen">

    <Grid Background="#FFFFFFFF" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Logo -->
            <RowDefinition Height="Auto"/>
            <!-- CPF -->
            <RowDefinition Height="Auto"/>
            <!-- Senha -->
            <RowDefinition Height="Auto"/>
            <!-- Botão -->
            <RowDefinition Height="*"/>
            <!-- Espaço sobrando -->
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Grid.Row="0" Source="Resources/logo.png" HorizontalAlignment="Center" Width="127"/>

        <!-- CPF -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="CPF:" FontWeight="Bold"/>
            <TextBox Name="CpfTextBox" Width="200" Height="25" />
        </StackPanel>

        <!-- Senha -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <Label Content="Senha:" FontWeight="Bold"/>
            <PasswordBox Name="SenhaBox" Width="200" Height="25"/>
        </StackPanel>

        <!-- Botão -->
        <Button Grid.Row="3" Content="Entrar" Width="100" Height="30"
                Background="#5AC8FA" Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Center"
                Click="LoginButton_Click"/>

        <TextBlock Grid.Row="4" HorizontalAlignment="Center" Margin="0,10,0,28" FontSize="6">
                <Hyperlink>Ainda não possui cadastro? Cadastre-se</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
